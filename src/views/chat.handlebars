<div class="container mx-auto p-8 max-w-4xl">
    <h1 class="text-3xl font-bold text-gray-900 mb-6 text-center">Home</h1>
    <div class="bg-white shadow-lg rounded-lg p-6">
        <div class="mb-4">
            <label for="chatbox" class="block text-sm font-medium text-gray-700">Chat Box</label>
            <input id="chatbox" type="text" placeholder="Type your message..."
                class="mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
        </div>
        <div id="messages" class="max-h-96 overflow-y-auto bg-gray-100 p-4 rounded-md shadow-inner mb-4">
            {{#each msg as |obj|}}
            <p class="text-sm text-gray-700 mb-2">
                <strong class="text-blue-600">{{obj.socketid}}:</strong> {{obj.message}}
            </p>
            {{/each}}
        </div>
        <p id="log" class="text-sm text-gray-500"></p>
    </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/chat.js"></script>